    private boolean transferCredits(Player from, Player to) {
        try {
            // è·å–CreditPluginå®ä¾‹
            Object creditPlugin = Bukkit.getPluginManager().getPlugin("CreditPlugin");
            if (creditPlugin == null) {
                AssassinPlugin.getInstance().getLogger().warning("CreditPluginæœªæ‰¾åˆ°ï¼Œæ— æ³•è½¬ç§»ä¿¡ç”¨ç‚¹");
                return false;
            }
            
            // è·å–CreditManager
            Method getCreditManager = creditPlugin.getClass().getMethod("getCreditManager");
            Object creditManager = getCreditManager.invoke(creditPlugin);
            
            // è·å–ç›®æ ‡ä¿¡ç”¨ç‚¹
            Method getCredits = creditManager.getClass().getMethod("getCredits", Player.class);
            int targetCredits = (int) getCredits.invoke(creditManager, from);
            
            if (targetCredits > 0) {
                // è½¬ç§»æ‰€æœ‰ä¿¡ç”¨ç‚¹
                Method removeCredits = creditManager.getClass().getMethod("removeCredits", Player.class, int.class);
                boolean removeSuccess = (boolean) removeCredits.invoke(creditManager, from, targetCredits);
                
                if (removeSuccess) {
                    Method addCredits = creditManager.getClass().getMethod("addCredits", Player.class, int.class);
                    boolean addSuccess = (boolean) addCredits.invoke(creditManager, to, targetCredits);
                    
                    if (addSuccess) {
                        to.sendMessage("Â§8[æš—ç½‘] Â§6ğŸ’° ä½ è·å¾—äº† " + targetCredits + " ç‚¹ä¿¡ç”¨ç‚¹");
                        from.sendMessage("Â§cğŸ’¸ ä½ å¤±å»äº† " + targetCredits + " ç‚¹ä¿¡ç”¨ç‚¹");
                        return true;
                    } else {
                        // å¦‚æœæ·»åŠ å¤±è´¥ï¼Œè¿”è¿˜ä¿¡ç”¨ç‚¹
                        addCredits.invoke(creditManager, from, targetCredits);
                        AssassinPlugin.getInstance().getLogger().warning("æ·»åŠ ä¿¡ç”¨ç‚¹å¤±è´¥ï¼Œå·²è¿”è¿˜ç»™åŸç©å®¶");
                    }
                }
            } else {
                to.sendMessage("Â§8[æš—ç½‘] Â§7ç›®æ ‡æ²¡æœ‰ä¿¡ç”¨ç‚¹å¯è½¬ç§»");
            }
        } catch (Exception e) {
            AssassinPlugin.getInstance().getLogger().warning("è½¬ç§»ä¿¡ç”¨ç‚¹æ—¶å‡ºé”™: " + e.getMessage());
        }
        return false;
    }
    
    // æ£€æŸ¥æ´»è·ƒåˆçº¦
    public void checkActiveContracts() {
        Iterator<Map.Entry<UUID, AssassinContract>> iterator = activeContracts.entrySet().iterator();
        
        while (iterator.hasNext()) {
            Map.Entry<UUID, AssassinContract> entry = iterator.next();
            AssassinContract contract = entry.getValue();
            
            // ç§»é™¤å·²å®Œæˆçš„åˆçº¦
            if (contract.isCompleted()) {
                // å¦‚æœæ˜¯ç¬¬ä¸‰æ¡£åˆçº¦ï¼Œåœæ­¢ä¸‹é›¨
                if (contract.getTier() == 3) {
                    stopRainForContract(contract.getContractId());
                }
                iterator.remove();
                removeContract(contract.getContractId());
                continue;
            }
            
            // æ£€æŸ¥ç›®æ ‡æ˜¯å¦ç¦»çº¿
            Player target = Bukkit.getPlayer(contract.getTargetId());
            if (target == null || !target.isOnline()) {
                contract.setCompleted(true);
                contract.setSuccess(false);
                
                // å¦‚æœæ˜¯ç¬¬ä¸‰æ¡£åˆçº¦ï¼Œåœæ­¢ä¸‹é›¨
                if (contract.getTier() == 3) {
                    stopRainForContract(contract.getContractId());
                }
                
                updateContract(contract);
                iterator.remove();
                continue;
            }
            
            // æ£€æŸ¥æ€æ‰‹æ˜¯å¦å­˜åœ¨
            if (contract.isActive() && contract.getAssassinId() != null) {
                Entity assassin = Bukkit.getEntity(contract.getAssassinId());
                if (assassin == null || assassin.isDead()) {
                    contract.setCompleted(true);
                    contract.setSuccess(false);
                    
                    // å¦‚æœæ˜¯ç¬¬ä¸‰æ¡£åˆçº¦ï¼Œåœæ­¢ä¸‹é›¨å¹¶æ¸…ç†ç”µå‡»è®¡æ•°å™¨
                    if (contract.getTier() == 3) {
                        stopRainForContract(contract.getContractId());
                        drownedShockCounters.remove(contract.getAssassinId());
                    }
                    
                    updateContract(contract);
                    iterator.remove();
                }
            }
        }
    }
    
