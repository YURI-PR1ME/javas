    // ä¸“é—¨ä¸ºæººå°¸ç‹è®¾ç½®ç›®æ ‡å’Œç”µæ¶Œæ”»å‡»ç³»ç»Ÿ
    private void setDrownedTarget(LivingEntity assassin, Player target) {
        if (!(assassin instanceof Drowned)) return;
        
        Drowned drowned = (Drowned) assassin;
        
        // ç«‹å³è®¾ç½®ç›®æ ‡
        drowned.setTarget(target);
        
        // åˆ›å»ºç”µæ¶Œæ”»å‡»ç›‘æ§ä»»åŠ¡
        new BukkitRunnable() {
            private int ticks = 0;
            private final int maxTicks = 1200; // 60ç§’åè‡ªåŠ¨åœæ­¢
            private long lastThrowTime = 0;
            private long lastShockTime = 0;
            private final long THROW_COOLDOWN = 40; // 2ç§’æŠ•æ·å†·å´ï¼ˆ40 ticksï¼‰
            private final long SHOCK_COOLDOWN = 7; // çº¦1ç§’3æ¬¡ç”µæ¶Œæ”»å‡»ï¼ˆ7 ticksï¼‰
            
            @Override
            public void run() {
                if (!drowned.isValid() || drowned.isDead()) {
                    // æ¸…ç†ç”µå‡»è®¡æ•°å™¨
                    drownedShockCounters.remove(drowned.getUniqueId());
                    this.cancel();
                    return;
                }
                
                // æ£€æŸ¥ç›®æ ‡æ˜¯å¦å­˜åœ¨
                if (target == null || !target.isOnline() || target.isDead()) {
                    // æ¸…ç†ç”µå‡»è®¡æ•°å™¨
                    drownedShockCounters.remove(drowned.getUniqueId());
                    this.cancel();
                    return;
                }
                
                // å¼ºåˆ¶è®¾ç½®ç›®æ ‡ï¼Œç¡®ä¿å§‹ç»ˆè¿½è¸ªç›®æ ‡ç©å®¶
                drowned.setTarget(target);
                
                // æ¯ tick æ£€æŸ¥è·ç¦»å¹¶è°ƒæ•´è¡Œä¸º
                double distance = drowned.getLocation().distance(target.getLocation());
                
                // å¦‚æœè·ç¦»è¿‡è¿œï¼Œä¼ é€åˆ°åˆç†ä½ç½®ï¼ˆé¿å…å¡ä½ï¼‰
                if (distance > 50) {
                    Location newLocation = findSpawnLocation(target.getLocation(), 15, 25);
                    if (newLocation != null) {
                        drowned.teleport(newLocation);
                    }
                }
                
                // æ™ºèƒ½æ”»å‡»æ¨¡å¼ï¼šåŸºäºè·ç¦»é€‰æ‹©æ”»å‡»æ–¹å¼
                // 5æ ¼å†…ä½¿ç”¨ç”µæ¶Œæ”»å‡»ï¼Œ5æ ¼å¤–ä½¿ç”¨æŠ•æ·
                if (distance <= 5.0) {
                    // 5æ ¼å†…ä½¿ç”¨ç”µæ¶Œæ”»å‡»
                    long currentTime = System.currentTimeMillis();
                    if (currentTime - lastShockTime > SHOCK_COOLDOWN * 50) { // è½¬æ¢ä¸ºæ¯«ç§’
                        performShockAttack(drowned, target);
                        lastShockTime = currentTime;
                    }
                } else {
                    // 5æ ¼å¤–ä½¿ç”¨æŠ•æ·æ”»å‡»
                    long currentTime = System.currentTimeMillis();
                    if (currentTime - lastThrowTime > THROW_COOLDOWN * 50) { // è½¬æ¢ä¸ºæ¯«ç§’
                        // æ£€æŸ¥è§†çº¿æ˜¯å¦ç•…é€š
                        if (drowned.hasLineOfSight(target)) {
                            throwTrident(drowned, target);
                            lastThrowTime = currentTime;
                        }
                    }
                }
                
                // ç¡®ä¿æººå°¸å§‹ç»ˆæŒæœ‰ä¸‰å‰æˆŸ
                if (drowned.getEquipment().getItemInMainHand().getType() != Material.TRIDENT) {
                    ItemStack trident = createEnchantedTrident();
                    drowned.getEquipment().setItemInMainHand(trident);
                }
                
                ticks++;
                if (ticks >= maxTicks) {
                    // é‡æ–°å¯åŠ¨ä»»åŠ¡ï¼Œé¿å…é•¿æ—¶é—´è¿è¡Œçš„é—®é¢˜
                    this.cancel();
                    setDrownedTarget(drowned, target); // é‡æ–°è®¾ç½®ç›®æ ‡ç³»ç»Ÿ
                }
            }
        }.runTaskTimer(AssassinPlugin.getInstance(), 0L, 1L);
    }
    
    // æ‰§è¡Œç”µæ¶Œæ”»å‡»
    private void performShockAttack(Drowned drowned, Player target) {
        if (drowned == null || target == null || drowned.isDead() || target.isDead()) return;
        
        try {
            // é€ æˆ2ç‚¹ä¼¤å®³
            target.damage(2.0, drowned);
            
            // æ’­æ”¾ç”µå‡»æ•ˆæœ
            target.getWorld().playSound(target.getLocation(), Sound.ENTITY_LIGHTNING_BOLT_THUNDER, 0.5f, 1.5f);
            
            // ä½¿ç”¨å…¼å®¹çš„ç²’å­æ•ˆæœ
            try {
                target.getWorld().spawnParticle(Particle.CRIT, target.getLocation(), 10, 0.5, 1, 0.5, 0.1);
            } catch (Exception e) {
                // å¦‚æœç²’å­æ•ˆæœå¤±è´¥ï¼Œå¿½ç•¥
            }
            
            // å¢åŠ ç”µå‡»è®¡æ•°
            int shockCount = drownedShockCounters.getOrDefault(drowned.getUniqueId(), 0) + 1;
            drownedShockCounters.put(drowned.getUniqueId(), shockCount);
            
            // æ¯6æ¬¡ç”µå‡»è§¦å‘ä¸€æ¬¡é›·å‡»
            if (shockCount >= 6) {
                triggerLightningStrike(drowned, target);
                drownedShockCounters.put(drowned.getUniqueId(), 0); // é‡ç½®è®¡æ•°
            }
            
            // å‘é€ç”µå‡»æ¶ˆæ¯ç»™ç›®æ ‡
            if (shockCount % 2 == 0) { // æ¯2æ¬¡ç”µå‡»å‘é€ä¸€æ¬¡æ¶ˆæ¯ï¼Œé¿å…æ¶ˆæ¯è¿‡å¤š
                target.sendMessage("Â§bâš¡ ä½ è¢«æººå°¸ç‹çš„ç”µæ¶Œæ”»å‡»å‡»ä¸­ï¼");
            }
            
        } catch (Exception e) {
            AssassinPlugin.getInstance().getLogger().warning("æ‰§è¡Œç”µæ¶Œæ”»å‡»æ—¶å‡ºé”™: " + e.getMessage());
        }
    }
    
