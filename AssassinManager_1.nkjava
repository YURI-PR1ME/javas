    // æŠ•æ·ä¸‰å‰æˆŸæ”»å‡» - æ”¹è¿›ç‰ˆæœ¬
    private void throwTrident(Drowned drowned, Player target) {
        if (drowned == null || target == null || drowned.isDead()) return;
        
        try {
            Location eyeLocation = drowned.getEyeLocation();
            Vector direction = target.getEyeLocation().toVector().subtract(eyeLocation.toVector()).normalize();
            
            // æ·»åŠ éšæœºåç§»ï¼Œä½¿æŠ•æ·æ›´è‡ªç„¶
            Random random = new Random();
            direction.add(new Vector(
                (random.nextDouble() - 0.5) * 0.1,
                (random.nextDouble() - 0.5) * 0.1,
                (random.nextDouble() - 0.5) * 0.1
            )).normalize();
            
            // åˆ›å»ºä¸‰å‰æˆŸæŠ›å°„ç‰©
            Trident trident = (Trident) drowned.getWorld().spawnEntity(
                eyeLocation.add(direction.multiply(2)), EntityType.TRIDENT
            );
            
            // è®¾ç½®ä¸‰å‰æˆŸå±æ€§
            trident.setShooter(drowned);
            trident.setVelocity(direction.multiply(1.5 + random.nextDouble() * 0.5)); // éšæœºé€Ÿåº¦
            trident.setDamage(8.0 + random.nextDouble() * 4.0); // éšæœºä¼¤å®³8-12ç‚¹
            
            // è®¾ç½®ä¸‰å‰æˆŸçš„é™„é­”
            ItemStack tridentItem = createEnchantedTrident();
            trident.setItem(tridentItem);
            
            // æ·»åŠ ç²’å­æ•ˆæœ
            try {
                drowned.getWorld().spawnParticle(Particle.CRIT, trident.getLocation(), 5, 0.2, 0.2, 0.2, 0.05);
            } catch (Exception e) {
                // å¿½ç•¥ç²’å­æ•ˆæœé”™è¯¯
            }
            
            // æ’­æ”¾éŸ³æ•ˆ
            drowned.getWorld().playSound(drowned.getLocation(), Sound.ITEM_TRIDENT_THROW, 1.0f, 0.8f + random.nextFloat() * 0.4f);
            
        } catch (Exception e) {
            AssassinPlugin.getInstance().getLogger().warning("æŠ•æ·ä¸‰å‰æˆŸæ—¶å‡ºé”™: " + e.getMessage());
        }
    }
    
